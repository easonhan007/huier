<%= simple_form_for(@category, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: '分类名称' %>
    <%= f.input :sort, 
                label: '排序', 
                hint: '按照数字从大到小的顺序显示产品分类' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, value:'提交', class:'btn-primary' %>
    <%= link_to '返回', categories_path, class: 'btn' %>
  </div>
<% end %>

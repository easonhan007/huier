<h3>所有产品</h3>

<table class="table table-striped">
  <tr>
    <th width="30%">产品名称</th>
    <th width="30%">产品分类</th>
    <th width="20%">在首页显示</th>
    <th colspan="3">操作</th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td title="<%= product.desc%>"><%= product.name %></td>
    <td><%= product.category.name unless product.category.blank? %></td>
    <td><%= (product.picked)? '是' : '否' %></td>
    <td><%= link_to([:admin, product], class:'btn btn-mini') do %>
        <i class="icon-search"></i>详情<% end %>
    </td>
    <td><%= link_to(edit_admin_product_path(product), class:'btn btn-mini') do %>
        <i class="icon-edit"></i>编辑<% end %>
    </td>
    <td><%= link_to([:admin, product], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-mini') do %>
        <i class="icon-remove"></i>删除<% end %>
    </td>
  </tr>
<% end %>
</table>

